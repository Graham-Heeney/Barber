<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Barber"
        tools:targetApi="34">

        <!-- Google Maps API -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/MAPS_API_KEY" />

        <!-- LOGIN SCREEN (APP ENTRY POINT) -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MAIN LIST SCREEN -->
        <activity
            android:name=".activities.BarberListActivity"
            android:exported="false" />

        <!-- ADD / EDIT BARBER -->
        <activity
            android:name=".activities.BarberActivity"
            android:exported="false" />

        <!-- SINGLE BARBER MAP -->
        <activity
            android:name=".activities.MapActivity"
            android:exported="false"
            android:label="@string/title_activity_map" />

        <!-- VIEW ALL BARBERS MAP -->
        <activity
            android:name=".activities.BarberMapsActivity"
            android:exported="false" />

    </application>

</manifest>
